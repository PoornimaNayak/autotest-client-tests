<!-- Test configuration for 'openipmi' -->
<TEST>
    <TYPE>AUTO</TYPE>
    <PACKAGE>OpenIPMI</PACKAGE>
    <COMMAND>openipmi.sh</COMMAND>
    <ALLOW>
        <ATTR>BMC</ATTR>
        <COMMENT>Requires Baseboard Managemtnt Controller hardware on the test machine.</COMMENT>
    </ALLOW>
