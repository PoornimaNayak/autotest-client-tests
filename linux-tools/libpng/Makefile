TARGETS = libpng.sh

### for generic gcc:
CFLAGS=-DPNG_USE_PNGGCCRD -Wall $(OPTFLAGS) -funroll-loops \
	-fomit-frame-pointer -DPNG_DEBUG=0

LDFLAGS= -L../.libs -Wl -lpng -lz -lm
LDFLAGS_A= -L../.libs -Wl -lpng -lz -lm

.SUFFIXES:      .c .o .pic.o

.c.pic.o:
	$(CC) -c $(CFLAGS) -fPIC -o $@ $*.c

all: pngtest pngtest-static

pngtest: pngtest.o
	$(CC) -o pngtest $(CFLAGS) pngtest.o $(LDFLAGS)

pngtest-static: pngtest.o
	$(CC) -o pngtest-static $(CFLAGS) pngtest.o $(LDFLAGS_A)

install: 
	for i in $(TARGETS) ; do \
		ln -f  $$i ../../bin/$$i ; \
	done

uninstall:
	for i in $(TARGETS) ; do \
		rm -f ../../bin/$$i ; \
	done
clean:
	@rm -f *.o libpng.a libpng.so* pngtest pngtest-static pngout.png *~

pngtest.o:	pngtest.c

